<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/de.renard.views.ledlight"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switch_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <de.renard.views.ledlight.LEDLightView
            android:id="@+id/light1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:AnimationDuration="300"
            app:ColorizeGlass="false"
            app:LightColor="#ff0000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <de.renard.views.ledlight.LEDLightView
            android:id="@+id/light2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:AnimationDuration="600"
            app:ColorizeGlass="true"
            app:LightColor="#00ff00" />

        <de.renard.views.ledlight.LEDLightView
            android:id="@+id/light3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:AnimationDuration="700"
            app:ColorizeGlass="false"
            app:LightColor="#f000f0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <de.renard.views.ledlight.LEDLightView
            android:id="@+id/light4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:AnimationDuration="1300"
            app:ColorizeGlass="true"
            app:LightColor="#f0f00f" />
    </LinearLayout>

</LinearLayout>