<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/de.renard.views.ledlight"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switch_light" />

    <de.renard.views.ledlight.LEDLightView
        android:id="@+id/light1"
        app:LightColor="#ff0000"     
        app:ColorizeGlass ="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <de.renard.views.ledlight.LEDLightView
        android:id="@+id/light2"
        app:LightColor="#00ff00"
        app:AnimationDuration="500"             
        app:ColorizeGlass ="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
        <de.renard.views.ledlight.LEDLightView
        android:id="@+id/light3"
        app:LightColor="#f000f0"     
        app:AnimationDuration="700"
        app:ColorizeGlass ="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    
        <de.renard.views.ledlight.LEDLightView
        android:id="@+id/light4"
        app:LightColor="#f0f00f"     
        app:ColorizeGlass ="true"
        app:AnimationDuration="300"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
        

</LinearLayout>